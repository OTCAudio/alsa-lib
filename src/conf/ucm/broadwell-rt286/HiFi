# Use case Configuration for Nexus 7
# Adapted to Ubuntu Touch by David Henningsson <david.henningsson@canonical.com> and Zedong <zedong.chen@intel.com>


SectionInclude."Codecs" {
	Include [
		"rt286"   
	]
}


SectionVerb {

	EnableSequence [
	]

	DisableSequence [
	]

	# ALSA PCM
	Value {
		# ALSA PCM device for HiFi
		PlaybackPCM "hw:broadwellrt286"
		CapturePCM "hw:broadwellrt286"
	}
}

SectionDevice."Headphones" {
	Comment "Headphones playback"

	ConflictingDevice [
		"Speaker"
	]

	EnableSequence [
		cdev "hw:broadwellrt286"
		cset "name='Master Playback Volume' 30"
		
		# this runs rt286 enable sequence
		enable "RT286.Headphones"
	]

	DisableSequence [
		cdev "hw:broadwellrt286"
		
		# this runs rt286 disable sequence
		disable "RT286.Headphones"	
	]

	Value {
		PlaybackChannels "2"
		JackDev "rt286-jack"
		JackControl "Headphone Jack"
		JackHWMute "Speaker"
	}
}

SectionDevice."Speaker" {
	Comment "Speaker playback"

	ConflictingDevice [
		"Headphones"
	]

	EnableSequence [
		cdev "hw:broadwellrt286"
		# this runs rt286 enable sequence
		enable "RT286.Speaker"
	]

	DisableSequence [
		cdev "hw:broadwellrt286"
		# this runs rt286 disenable sequence
		disable "RT286.Speaker"
	]

	Value {
		PlaybackChannels "2"
	}
}

SectionDevice."Headset" {
	Comment "headset Microphone"

	ConflictingDevice [
		"Mainmic"
	]

	EnableSequence [
		cdev "hw:broadwellrt286"

		# this runs rt286 enable sequence
		enable "RT286.Headset"
	]

	DisableSequence [
		cdev "hw:broadwellrt286"
		# this runs rt286 disenable sequence
		disable "RT286.Headset"
	]

	Value {
		CaptureChannels "2"
		JackDev "rt286-jack"
		JackControl "Mic Jack"
		JackHWMute "Mainmic"
	}
}

SectionDevice."Mainmic" {
	Comment "Main Microphone"

	ConflictingDevice [
		"Headset"
	]

	EnableSequence [
		cdev "hw:broadwellrt286"

		# this runs rt286 enable sequence
		enable "RT286.Mainmic"
	]

	DisableSequence [
		cdev "hw:broadwellrt286"
		# this runs rt286 disenable sequence
		disable "RT286.Mainmic"
	]

	Value {
		CaptureChannels "2"
	}
}
